<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/inviteLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wordofmouth.Activities.ActivityInvite"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:padding="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/searchBox">

        <SearchView
            android:id="@+id/searchUsersField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@color/listBackground" />

        <Button
            android:id="@+id/searchUsersButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="search"/>
    </LinearLayout>

    <ListView
        android:background="@color/listBackground"
        android:divider="@color/backgroundColor"
        android:layout_below="@+id/searchBox"
        android:layout_marginTop="5dp"
        android:dividerHeight="10dp"
        android:id="@+id/fetchedUsersList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>


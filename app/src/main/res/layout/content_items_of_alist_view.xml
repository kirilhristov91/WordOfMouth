<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_items_of_alist_view"
    tools:context="com.wordofmouth.Activities.ActivityItemsOfAList">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/addItemText"
        android:text="@string/AddItemTextView"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimary"
        android:paddingLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/invitePeople"
        android:text="+ Invite People"
        android:layout_toRightOf="@+id/addItemText"
        android:layout_marginLeft="90dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimary" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemsListView"
        android:dividerHeight="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

</RelativeLayout>

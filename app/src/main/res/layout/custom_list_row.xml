<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/listImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bg"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/listTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/listImage"
        android:layout_toRightOf="@+id/listImage"
        android:layout_toEndOf="@+id/listImage"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/descriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/listForwardImage"
        android:layout_alignBottom="@+id/listTitle"
        android:layout_toRightOf="@+id/listImage"
        android:layout_toEndOf="@+id/listImage"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="desctext:"
        android:textSize="15sp"
        android:layout_alignBaseline="@+id/descriptionTitle"
        android:layout_alignBottom="@+id/descriptionTitle"
        android:layout_toRightOf="@+id/descriptionTitle"
        android:layout_toEndOf="@+id/descriptionTitle"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp" />

    <TextView
        android:id="@+id/listAddedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Added by:"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_alignTop="@+id/listAddedByUsername"
        android:layout_toRightOf="@+id/listImage"
        android:layout_toEndOf="@+id/listImage"
        />

    <TextView
        android:id="@+id/listAddedByUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username:"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/listImage"
        android:layout_toRightOf="@+id/listAddedBy"
        android:layout_toEndOf="@+id/listAddedBy"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"/>


    <ImageView
        android:id="@+id/listForwardImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/forward"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/profilePicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/profiledefault"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/updatePictureButton"
        android:layout_below="@id/profilePicture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Take a photo" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/chooseFromGallery"
        android:layout_below="@+id/updatePictureButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Browse Gallery" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/saveProfileChanges"
        android:layout_below="@+id/chooseFromGallery"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Save Changes" />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/rotateRight"
        android:src="@drawable/rotate_right"

        android:layout_below="@+id/chooseFromGallery"
        android:layout_alignLeft="@+id/chooseFromGallery"
        android:layout_alignStart="@+id/chooseFromGallery" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/rotateLeft"
        android:src="@drawable/rotate_left"
        android:layout_below="@+id/chooseFromGallery"
        android:layout_alignRight="@+id/chooseFromGallery"
        android:layout_alignEnd="@+id/chooseFromGallery" />

</RelativeLayout>